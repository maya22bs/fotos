<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="1dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="#FAFAFA"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/card_image"
                    android:layout_alignRight="@+id/card_image"
                    android:layout_alignBottom="@+id/card_image"
                    android:background="#CC000000"
                    android:padding="5dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/card_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textColor="#7A7A7A"
                    android:background="#FAFAFA"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/card_sponsored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="6dp"
                        android:textSize="5sp"
                        android:text="Sponsored"
                        android:background="#FAFAFA"/>
                    <ImageView
                        android:id="@+id/card_sponsorLogo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingRight="5dp"
                        android:background="#FAFAFA"
                        android:src="@drawable/logo_mcdonalds"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:layout_margin="3dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/arrrow_left"
                    android:id="@+id/card_arrrow_left"/>
                <TextView
                    android:id="@+id/card_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="#000000"
                    android:background="#FAFAFA"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:layout_gravity="center"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/card_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="#000000"
                    android:background="#FAFAFA"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FAFAFA"
                    android:layout_margin="3dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/arrrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/card_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIKE"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_marginRight="65dp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:id="@+id/card_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMMENT"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_marginRight="65dp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:id="@+id/card_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHARE"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_alignParentTop="true" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>